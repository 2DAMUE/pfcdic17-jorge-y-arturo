<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.tury.socialloc.MainActivity">

    <include
        android:id="@+id/include"
        layout="@layout/content_main"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/btnOthers"

        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/button4"
        android:layout_below="@+id/button4"
        android:layout_marginTop="27dp"
        android:background="@drawable/green_button"
        android:onClick="otros"
        android:text="Otros sitios"
        android:textColorLink="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:id="@+id/button3"

        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/green_button"
        android:onClick="mapas"
        android:text="Mapa"
        android:textColorLink="@color/common_google_signin_btn_text_dark_default"
        android:layout_below="@+id/appBarLayout"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button4"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_below="@+id/button5"
        android:layout_marginTop="38dp"
        android:background="@drawable/green_button"
        android:onClick="hoteles"
        android:text="Hoteles" />

    <Button
        android:id="@+id/button5"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/button3"
        android:layout_marginTop="36dp"
        android:background="@drawable/green_button"
        android:onClick="restaurantes"
        android:text="Restaurantes" />

    <Button
        android:id="@+id/button10"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/btnOthers"
        android:layout_below="@+id/btnOthers"
        android:layout_marginTop="47dp"
        android:background="@drawable/green_button"
        android:onClick="salir"
        android:text="Cerrar Sesion" />

</RelativeLayout>
